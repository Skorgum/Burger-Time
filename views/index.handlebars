<div class="container">

    <div class="jumbotron">
        <h1>It's Burger Time!</h1>
        <p>Order your burger below.</p>
        <br>
        <h2>Select a Burger!</h2>
        <panel>
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Order Your Burger Here!</label>
                    <select data-placeholder="" id="newBurger" name="burger">
                        <option value="Nothing Selected" selected>Please Select a Burger</option>
                        <option value="Hamburger">Plain Hamburger</option>
                        <option value="CheeseBurger">Plain CheeseBurger</option>
                        <option value="CaliforniaBurger">California Burger</option>
                        <option value="DoubleBfChz">Double CheeseBurger</option>
                        <option value="VeggieBurger">Veggie Burger</option>
                    </select>

                    <button type="submit" class="btn btn-success" id="addburger">
                        <span class="fa fa-thumbs-up"></span>
                    </button>
                </div>
            </form>
        </panel>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Eat Your Burger!</strong>
                    <p>Click 'Eat Me!' to eat your burger.</p>
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each burgers}}
                        {{#unless eaten}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newEaten="{{eat}}">Eat Me!<span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Eaten Burgers</strong>
                    <p>Past orders</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                        {{#if eaten}}
                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                            data-newEaten="{{eat}}"><span class="fa fa-trash"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>



                </div>
            </div>
        </div>

    </div>
    <!--endrow -->
</div>
<!--endcontainer -->